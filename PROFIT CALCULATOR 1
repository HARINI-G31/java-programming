import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    float copy =sc.nextFloat();
    float copycost =sc.nextFloat();
    float agcost =sc.nextFloat();
    float invest=agcost*copy;
    float revenue=copycost*copy;
    float profit=revenue-invest;
    float finalprofit=profit-100;
    System.out.println("Number of copies sold:"+(int)copy);
    System.out.println("Cost of each copy:"+(int)copycost);
    System.out.println("Cost spent by agency on each newspaper:"+(int)agcost);
    System.out.printf("The profit obtained is Rs.%.2f",finalprofit);
        
        
    }
}
